<Window x:Class="ScreenRecorderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="400" Width="350"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="TitleButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" BorderBrush="#333" BorderThickness="1" Background="#1E1E1E">
        <Grid>

            <!-- TITLE BAR -->
            <!-- TITLE BAR -->
            <Grid Height="40"
      Background="#1E1E1E"
      MouseDown="TitleBar_MouseDown"
      VerticalAlignment="Top">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <TextBlock Grid.Column="0"
               Text="Screen Recorder Pro"
               Foreground="White"
               VerticalAlignment="Center"
               Margin="12,0,0,0"/>

                <!-- Minimize -->
                <Button Grid.Column="1"
            Content="–"
            Style="{StaticResource TitleButton}"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Minimize_Click"/>

                <!-- Close -->
                <Button Grid.Column="2"
            Content="✕"
            Style="{StaticResource TitleButton}"
            Background="#C42B1C"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Close_Click"/>
            </Grid>


            <!-- CONTENT -->
            <Grid Margin="20,60,20,20">
                <StackPanel VerticalAlignment="Center">
                    <Button Name="btnStart"
                            Content="Start Recording"
                            Style="{StaticResource ModernButton}"
                            Click="btnStart_Click"/>

                    <Button Name="btnStop"
                            Content="Stop Recording"
                            Margin="0,15,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="btnStop_Click"
                            IsEnabled="False"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Name="lblStatus" Text="Ready" Foreground="#AAA"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
